---
import Footer from "../components/layout/Footer.astro";
import Header from "../components/layout/Header.astro";
import "../styles/global.css";

type Props = {
    pageTitle: string;
};

const { pageTitle } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Wir sind ein Schweizer Startup, das Eis auf Schweizerart produziert. Probiere dich durch unsere Sorten!"
        />
        <meta name="robots" content="index, follow" />

        <meta
            name="google-site-verification"
            content="d6oCEVZZUz2_ki4qlG873MoOYK3VPhnpRbzaZuVMi-4"
        />

        <title>Ronkies - {pageTitle}</title>

        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />

        <style is:global>
            :root {
                --background: white;
                --background-variant: #fff7ec;
                --on-background: black;
                --surface: #231f20;
                --on-surface: #ffecd4;

                --space-xs: 0.2rem;
                --space-sm: 0.5rem;
                --space-md: 1rem;
                --space-lg: 2rem;
                --space-xl: 4rem;
            }

            html {
                height: 100%;
            }
            body {
                display: flex;
                flex-direction: column;
                height: 100%;
                color: var(--on-background);
                background-color: var(--background);
                line-height: 1.5;
            }

            main {
                flex: 1;
            }

            section {
                padding-block: var(--space-lg);

                article {
                    background-color: var(--background-variant);
                }

                &:nth-of-type(even) {
                    background-color: var(--background-variant);

                    article {
                        background-color: var(--background);
                    }
                }
            }

            .wrapper ~ section,
            .wrapper {
                margin-top: 1rem;
                padding-inline: 15vw;

                &:first-child {
                    margin-top: 13rem;
                }

                @media (width <= 800px) {
                    padding-inline: 10vw;
                }

                @media (width <= 500px) {
                    padding-inline: 5vw;
                }

                @media (width <= 400px) {
                    padding-inline: 4vw;
                }
            }

            h1 {
                font-size: 3rem;
                margin-bottom: 2rem;
                text-transform: uppercase;

                @media (width <= 800px) {
                    font-size: 2rem;
                }
            }

            a {
                color: var(--surface);
            }

            a.button {
                display: inline-flex;
                align-items: center;
                gap: var(--space-sm);
                padding: var(--space-md) var(--space-md);
                color: var(--on-background);
                border: 2px solid var(--on-background);

                transition: all 0.2s ease;

                &:hover {
                    background-color: var(--surface);
                    color: var(--on-surface);
                    text-decoration: none;
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <slot name="cover" />
            <div class="wrapper">
                <h1>{pageTitle}</h1>
                <slot />
            </div>
            <slot name="sections" />
        </main>
        <Footer />
    </body>
</html>
