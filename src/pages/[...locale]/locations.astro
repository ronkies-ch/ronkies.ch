---
import { getEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { render } from "astro:content";
import {
    getLocalizedStaticPaths,
    localizedContentPath,
} from "../../i18n/utils";

export const getStaticPaths = getLocalizedStaticPaths;

const page = await getEntry(
    "pages",
    localizedContentPath(Astro.url, "locations"),
);
const { Content } = await render(page!);
---

<style>
    figure {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: var(--space-lg);
        margin-bottom: var(--space-md);

        img {
            min-width: 20rem;
            width: 30%;
        }

        figcaption {
            flex: 1;

            ul {
                li {
                    margin-bottom: var(--space-sm);
                }
            }
        }
    }
</style>

<BaseLayout pageTitle="Verkaufsstellen">
    <Content />

    <iframe
        width="100%"
        height="400"
        style="border:0"
        referrerpolicy="no-referrer-when-downgrade"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAvDPgNoFmejLsz9JIY9ArqjXF1u5DD6Tc&q=Milch+Automat+Wil+ZH"
        allowfullscreen
    >
    </iframe>
</BaseLayout>
