---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Flavor from "../../components/Flavor.astro";
import OffsetCircleGrid from "../../components/OffsetCircleGrid.astro";
import { getLocalizedStaticPaths } from "../../i18n/utils";

export const getStaticPaths = async () => {
	const pages = await getCollection("pages", ({ id }) =>
		id.endsWith("assortment"),
	);

	const flavors = await getCollection("flavors");

	return getLocalizedStaticPaths({ page: pages }, { flavors });
};

const { page, flavors } = Astro.props;

const { Content } = await render(page!);
---

<style></style>

<BaseLayout pageTitle="Sortiment">
	<Content />

	<OffsetCircleGrid>
		{flavors?.map(({ data }) => <Flavor flavor={data} />)}
	</OffsetCircleGrid>
</BaseLayout>
