---
import { getCollection } from "astro:content";
import OffsetCircleGrid from "../../components/OffsetCircleGrid.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Flavor from "../../components/Flavor.astro";
import { getEntry } from "astro:content";
import { render } from "astro:content";
import {
    getLocalizedStaticPaths,
    localizedContentPath,
} from "../../i18n/utils";

export const getStaticPaths = getLocalizedStaticPaths;

console.log(localizedContentPath(Astro.url, "assortment"));

const page = await getEntry(
    "pages",
    localizedContentPath(Astro.url, "assortment"),
);
const { Content } = await render(page!);

const flavors = await getCollection("flavors");
---

<style></style>

<BaseLayout pageTitle="Sortiment">
    <Content />

    <OffsetCircleGrid>
        {flavors.map(({ data }) => <Flavor flavor={data} />)}
    </OffsetCircleGrid>
</BaseLayout>
